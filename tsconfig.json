{
  "compilerOptions": {
    "target": "es2024",
    "useDefineForClassFields": true,
    "module": "nodenext",
    "lib": [
      "ES2024",
    ],
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}